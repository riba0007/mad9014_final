<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.edumedia.riba0007.RIBA0007" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>RIBA0007</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-navigation href="https://griffis.edumedia.ca/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        
        <icon src="res/android/icon/MDPI.png" density="mdpi" />
        <icon src="res/android/icon/HDPI.png" density="hdpi" />
        <icon src="res/android/icon/XHDPI.png" density="xhdpi" />
        <icon src="res/android/icon/XXHDPI.png" density="xxhdpi" />
        <icon src="res/android/icon/XXXHDPI.png" density="xxxhdpi" />
        
        <splash src="res/android/splashscreen/L_MDPI.png" density="land-mdpi"/>
        <splash src="res/android/splashscreen/L_HDPI.png" density="land-hdpi"/>
        <splash src="res/android/splashscreen/L_XHDPI.png" density="land-xhdpi"/>
        <splash src="res/android/splashscreen/L_XXHDPI.png" density="land-xxhdpi"/>
        <splash src="res/android/splashscreen/L_XXXHDPI.png" density="land-xxxhdpi"/>

        <splash src="res/android/splashscreen/P_MDPI.png" density="port-mdpi"/>
        <splash src="res/android/splashscreen/P_HDPI.png" density="port-hdpi"/>
        <splash src="res/android/splashscreen/P_XHDPI.png" density="port-xhdpi"/>
        <splash src="res/android/splashscreen/P_XXHDPI.png" density="port-xxhdpi"/>
        <splash src="res/android/splashscreen/P_XXXHDPI.png" density="port-xxxhdpi"/>
    </platform>
    
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="2000" /> 
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
</widget>
